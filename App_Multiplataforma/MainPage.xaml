<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Multiplataforma.MainPage" Background="#816899">

    <ScrollView Background="#7B4A4A" BackgroundColor="#694343">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
               x:Name="MiImagen"
                Source="venom.png"
                HeightRequest="300"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"/>

            <Label
                Text="Hola! Que tal estas?"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Presione el boton para cambiar a una imagen aleatoria."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Presione el boton para cambiar a una imagen aleatoria." />

            <Button
                x:Name="CounterBtn"
                Text="Cambia la imagen." 
                SemanticProperties.Hint="Cambia la imagen."
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" Background="#6297CA" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
